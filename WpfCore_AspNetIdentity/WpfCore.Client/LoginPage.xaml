<Page x:Class="WpfCore.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfCore"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Border Background="Wheat"
                Width="300"
                CornerRadius="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Margin="20">
                <TextBlock Text="Name" />
                <TextBox x:Name="UserName" Text="test"/>
                <TextBlock Text="Password" />
                <TextBox x:Name="Password" Text="p@SSw0rd1234"/>
                <TextBlock Text="Uri" />
                <TextBox x:Name="Uri" Text="http://localhost:57294/Services/" />
                <TextBlock />
                <Button x:Name="LoginButton" Content="Login" Click="Login_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
